<div class="page login">
  <h2>Login</h2>
  <div class="input-group">
    {{input placeholder="Email" value=email}}
  </div>
  <div class="input-group">
    {{input placeholder="Password" type="password" value=password}}
  </div>
  <div class="input-group">
    <button type="button" name="button" {{action "login"}}>Login</button>
  </div>
</div>
